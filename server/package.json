{
  "name": "mikane_server",
  "version": "2.4.1-SNAPSHOT.8",
  "type": "module",
  "description": "API server for Mikane",
  "scripts": {
    "build": "rimraf ./build && tsc && npm run copy && cd build && npm ci --omit=dev",
    "esbuild": "rimraf ./build && tsc --noEmit && node ./esbuild.config.js && npm run copyesbuild",
    "copyesbuild": "copyfiles \"./public/**/*\" ./build && copyfiles -u 1 src/api.json ./build",
    "copy": "copyfiles package.json package-lock.json \"./public/**/*\" ./build",
    "start": "node build/index.js",
    "dev": "concurrently --raw \"tsx watch src/index.ts\" \"tsc --noEmit --watch\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run --pool=forks --poolOptions.forks.singleFork --coverage",
    "db": "docker-compose -f test_db/docker-compose-test-db.yml -p mikane_test_db up -d"
  },
  "dependencies": {
    "adze": "^2.2.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "postmark": "^4.0.5",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/node": "^22.17.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "nodemailer-mock": "^2.0.9",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "22.x.x || 24.x.x"
  },
  "license": "GPL-3.0-or-later"
}
