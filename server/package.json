{
  "name": "mikane_server",
  "version": "2.2.1-SNAPSHOT.9",
  "description": "API server for Mikane",
  "scripts": {
    "build": "rimraf ./build && tsc && npm run copy && cd build && npm ci --omit=dev",
    "esbuild": "rimraf ./build && node ./esbuild.config.mjs && npm run copyesbuild",
    "copyesbuild": "copyfiles \"./public/**/*\" ./build && copyfiles -u 1 src/api.json ./build",
    "copy": "copyfiles package.json package-lock.json \"./public/**/*\" ./build",
    "start": "node build/index.js",
    "startts": "npx ts-node src/index.ts",
    "dev": "npx nodemon src/index.ts",
    "test": "vitest run --pool=forks --poolOptions.forks.singleFork --coverage",
    "db": "docker-compose -f test_db/docker-compose-test-db.yml -p mikane_test_db up -d"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/coverage-v8": "^1.0.4",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.19.10",
    "eslint": "^8.55.0",
    "nodemailer-mock": "^2.0.2",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": "20.x.x"
  },
  "license": "GPL-3.0-or-later"
}
